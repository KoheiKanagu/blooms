{
  "firestore": {
    "rules": "firestore/firestore.rules",
    "indexes": "firestore/firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local",
        "*.ts",
        "test",
        ".editorconfig",
        ".gitignore",
        ".prettierignore",
        "eslint.config.js",
        "tsconfig.json"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run clean",
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 8081
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "hosting": [
    {
      "target": "app",
      "public": "hosting/public",
      "ignore": [
        "**/.*"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "widgetbook",
      "public": "hosting/widgetbook",
      "ignore": [
        "**/.*"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "storage": {
    "rules": "storage/storage.rules"
  },
  "extensions": {
    "delete-user-data-firestore-users-v1": "firebase/delete-user-data@0.1.23",
    "delete-user-data-firestore-highlights-v1": "firebase/delete-user-data@0.1.23",
    "delete-user-data-firestore-conditions-v1": "firebase/delete-user-data@0.1.23",
    "delete-user-data-storage-prompts-v1": "firebase/delete-user-data@0.1.23",
    "delete-user-data-storage-images-v1": "firebase/delete-user-data@0.1.23",
    "delete-user-data-storage-audios-v1": "firebase/delete-user-data@0.1.23"
  }
}
