rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // already authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // check if the user is the owner of the document
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    match /users_v1/{uid} {
      // only the user can read and write their own data
      allow get, update:
        if isOwner(uid);

      // only the user can create their own data
      allow create:
        if isAuthenticated() && request.auth.uid == uid;
    }

    match /conditions_v1/{document=**} {
      // only the user can read and write their own data
      allow get, list, update:
        if isAuthenticated() && resource.data.createdBy == request.auth.uid;

      // only the user can create their own data
      allow create:
        if isAuthenticated() && request.resource.data.createdBy == request.auth.uid;
    }

    match /reports_v1/{document=**} {
      // only the user can read their own data
      allow get, list:
        if isAuthenticated() && resource.data.subjectUid == request.auth.uid;
    }
  }
}